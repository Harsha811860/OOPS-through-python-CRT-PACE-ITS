from tkinter import *
from tkinter import *

from time import strftime


my =Tk()
my.title('Clock')



def time():
    string =strftime('%H:%M:%S %p')
    lbl.config(text=string)
    lbl.after(1000,time)



lbl=Label(my,font=('aRIAl',40,'bold'),
          background='black',
          foreground='red')


lbl.pack(anchor='center')
time()
mainloop()
